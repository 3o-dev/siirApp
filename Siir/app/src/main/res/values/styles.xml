<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    //daymode

    <style name="dayMode" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/nightModeOn</item>
        <item name="colorPrimary">@color/nightModeOff</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:title">#000</item>
    </style>

    //nightmode

    <style name="nightMode" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nightModeOn</item>
        <item name="colorPrimaryDark">@color/nightModeOn</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="loginButton">
        <item name="android:background">@drawable/loginbuttonshape</item>
    </style>


    <style name="facebookButton">
        <item name="android:background">@drawable/facebooklogin</item>
    </style>


    <style name="signButton">
        <item name="android:background">@drawable/signupbutton</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
